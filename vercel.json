{
  "buildCommand": "npm run build:prod",
  "devCommand": "npm run dev:local",
  "installCommand": "npm install",
  "outputDirectory": ".output",
  "framework": "nuxtjs",
  "functions": {
    "server/api/**": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true,
      "dev": true
    }
  }
}
